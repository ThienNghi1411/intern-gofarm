                    </svg>
                    <div class="productBundle__total-btnAddtoCart-text">{{ 'product-bundle.addToCart' | t }}</div> 
                </div>
            </div>

        </div>
    </div>
    <script id="dataProduct" type="application/ld+json">
        {
        "dataProduct" : {{ dataProducts | json }}
        }
    </script> 
</section>



{% schema %}
{
  "name": "Product Bundle",
  "tag": "section",
  "presets": [
    {
      "name": "Product Bundle"
    }
  ],
  "settings": [
    {
    "type": "text",
    "id": "title",
    "label": "Input Title"
    }
    
  ]
}
{% endschema %}